@model IEnumerable<Asp_project.Models.Loja>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.nome_loja)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.descicao)
			</th>
			@*<th>
					@Html.DisplayNameFor(model => model.cpf_cnpj)
				<th>*@
			</th>
			<th>
				@Html.DisplayNameFor(model => model.telefone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.celular)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.dias_e_horas_de_funcionamento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.U)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.nome_loja)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.descicao)
				</td>
				@*<td>
						@Html.DisplayFor(modelItem => item.cpf_cnpj)
					</td>*@
				<td>
					@Html.DisplayFor(modelItem => item.telefone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.celular)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.dias_e_horas_de_funcionamento)

				</td>
				<td>
					@Html.DisplayFor(modelItem => item.U.cpf)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.id_loja">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.id_loja">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.id_loja">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
